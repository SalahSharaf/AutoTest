<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        cardCornerRadius="5dp"
        cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bigWrapper"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/colorPrimary">

                <RelativeLayout
                    android:id="@+id/main"
                    android:layout_width="100dp"
                    android:layout_centerVertical="true"
                    android:layout_height="100dp"
                    android:padding="10dp">

                    <View
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/testNumberText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="30dp"
                        tools:text="1" />
                </RelativeLayout>

                <View
                    android:id="@+id/devider"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/topicText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/main"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:text="Tpoic : " />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/topicText"
                    android:layout_alignTop="@+id/startButton"
                    android:layout_toEndOf="@+id/main"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:text="name" />

                <TextView
                    android:id="@+id/makerNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nameText"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@id/main"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:text="made by : " />

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/devider"
                    android:layout_below="@+id/main"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp"
                    tools:text="2002/11/33" />

                <ImageButton
                    android:id="@+id/addToListButton"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:tooltipText="Add to your List "
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons_default"
                    android:src="@drawable/ic_plus_one_black_24dp" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp"
                    android:layout_toLeftOf="@id/addToListButton"
                    android:id="@+id/descriptionButton"
                    android:contentDescription="12"
                    android:tooltipText="show Discription"
                    android:background="@drawable/buttons_default"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:layout_below="@id/devider"
                    android:tooltipText="Start now"
                    android:id="@+id/startButton"
                    android:layout_above="@id/addToListButton"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttons_default" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:visibility="invisible"
                android:id="@+id/descriptionLayout"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Description"
                    android:textColor="@color/colorAccent"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionText"
                    tools:text="dfgfhggjghjhjk"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/buttons_default"
                    android:textSize="12dp"
                    android:id="@+id/startButton2"
                    android:textColor="@color/colorAccent"
                    android:text="Start now"/>

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/hideDescriptionButton"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>